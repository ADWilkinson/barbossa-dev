{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://barbossa.dev/schema/v1.json",
  "title": "Barbossa Configuration",
  "description": "Configuration for Barbossa autonomous development agents",
  "type": "object",
  "required": ["owner", "repositories"],
  "properties": {
    "owner": {
      "type": "string",
      "description": "GitHub username or organization that owns the repositories"
    },
    "repositories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/repository"
      },
      "description": "List of repositories for Barbossa to work on"
    },
    "issue_tracker": {
      "$ref": "#/definitions/issue_tracker"
    },
    "settings": {
      "$ref": "#/definitions/settings"
    }
  },
  "definitions": {
    "repository": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Repository name (must match GitHub)"
        },
        "url": {
          "type": "string",
          "pattern": "^(git@github\\.com:|https://github\\.com/).+\\.git$",
          "description": "Git clone URL (SSH or HTTPS)"
        },
        "package_manager": {
          "type": "string",
          "enum": ["npm", "yarn", "pnpm", "bun"],
          "description": "Package manager (auto-detected if omitted)"
        },
        "do_not_touch": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files or directories agents should never modify",
          "examples": [
            [".env*", "src/lib/auth.ts", "prisma/migrations/"]
          ]
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "tech_lead": {
          "type": "object",
          "properties": {
            "auto_merge": {
              "type": "boolean",
              "default": true,
              "description": "Automatically merge PRs that pass review (default: true)"
            }
          }
        }
      }
    },
    "issue_tracker": {
      "type": "object",
      "description": "Configure which issue tracking system to use (GitHub Issues or Linear)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["github", "linear"],
          "default": "github",
          "description": "Issue tracker type: 'github' for GitHub Issues, 'linear' for Linear"
        },
        "linear": {
          "type": "object",
          "description": "Linear-specific configuration (required when type is 'linear')",
          "properties": {
            "team_key": {
              "type": "string",
              "description": "Linear team key (e.g., 'MUS', 'ENG')",
              "pattern": "^[A-Z]{2,10}$"
            },
            "api_key": {
              "type": "string",
              "description": "Linear API key (or set LINEAR_API_KEY env var)",
              "pattern": "^lin_api_.*$"
            },
            "backlog_state": {
              "type": "string",
              "default": "Backlog",
              "description": "Name of the workflow state for backlog issues"
            }
          },
          "required": ["team_key"]
        }
      }
    }
  }
}
