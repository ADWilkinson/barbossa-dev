{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://barbossa.dev/schema/v1.json",
  "title": "Barbossa Configuration",
  "description": "Configuration for Barbossa autonomous development agents",
  "type": "object",
  "required": ["owner", "repositories"],
  "properties": {
    "owner": {
      "type": "string",
      "description": "GitHub username or organization that owns the repositories"
    },
    "repositories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/repository"
      },
      "description": "List of repositories for Barbossa to work on"
    },
    "issue_tracker": {
      "$ref": "#/definitions/issue_tracker"
    },
    "settings": {
      "$ref": "#/definitions/settings"
    }
  },
  "definitions": {
    "repository": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Repository name (must match GitHub)"
        },
        "url": {
          "type": "string",
          "pattern": "^(git@github\\.com:|https://github\\.com/).+\\.git$",
          "description": "Git clone URL (SSH or HTTPS)"
        },
        "package_manager": {
          "type": "string",
          "enum": ["npm", "yarn", "pnpm", "bun"],
          "description": "Package manager (auto-detected if omitted)"
        },
        "do_not_touch": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files or directories agents should never modify",
          "examples": [
            [".env*", "src/lib/auth.ts", "prisma/migrations/"]
          ]
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "tech_lead": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable Tech Lead agent (default: true)"
            },
            "auto_merge": {
              "type": "boolean",
              "default": true,
              "description": "Automatically merge PRs that pass review (default: true)"
            },
            "min_lines_for_tests": {
              "type": "integer",
              "default": 50,
              "description": "Require tests for changes larger than this threshold"
            },
            "min_lines_for_tests_required": {
              "type": "integer",
              "description": "Deprecated (use min_lines_for_tests)"
            },
            "stale_days": {
              "type": "integer",
              "default": 5,
              "description": "Auto-close stale PRs after N days"
            },
            "stale_pr_days": {
              "type": "integer",
              "description": "Deprecated (use stale_days)"
            },
            "stale_pr_threshold": {
              "type": "integer",
              "description": "Deprecated (use stale_days)"
            },
            "block_on_pending_checks": {
              "type": "boolean",
              "default": true,
              "description": "Defer review while CI checks are pending"
            },
            "require_evidence": {
              "type": "boolean",
              "default": true,
              "description": "Require evidence in PR description"
            },
            "require_lockfile_disclosure": {
              "type": "boolean",
              "default": true,
              "description": "Require explicit lockfile disclosure in PR body"
            },
            "max_diff_chars": {
              "type": "integer",
              "default": 50000,
              "description": "Maximum diff size for automated review"
            },
            "max_files_for_auto_review": {
              "type": "integer",
              "default": 30,
              "description": "Maximum files changed for automated review"
            },
            "max_files_per_pr": {
              "type": "integer",
              "description": "Deprecated (use max_files_for_auto_review)"
            }
          }
        },
        "discovery": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable Discovery agent (default: true)"
            },
            "max_backlog_issues": {
              "type": "integer",
              "default": 20,
              "description": "Maximum backlog issues before discovery pauses"
            },
            "precision_mode": {
              "type": "string",
              "enum": ["high", "balanced", "experimental"],
              "default": "high",
              "description": "Signal precision for discovery heuristics"
            }
          }
        },
        "failure_analyzer": {
          "type": "object",
          "description": "Configuration for the failure analysis system that tracks PR failures and prevents repeated mistakes",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable failure tracking and analysis (default: true)"
            },
            "retention_days": {
              "type": "integer",
              "default": 90,
              "minimum": 7,
              "maximum": 365,
              "description": "Number of days to retain failure records (default: 90)"
            },
            "backoff_policy": {
              "type": "object",
              "description": "Policy for skipping issues that have repeatedly failed",
              "properties": {
                "skip_runs_after_failures": {
                  "type": "integer",
                  "default": 1,
                  "minimum": 1,
                  "maximum": 24,
                  "description": "Base number of hours to skip after consecutive failures (default: 1)"
                },
                "consecutive_failures_threshold": {
                  "type": "integer",
                  "default": 2,
                  "minimum": 2,
                  "maximum": 10,
                  "description": "Number of consecutive failures before backoff activates (default: 2)"
                }
              }
            }
          }
        }
      }
    },
    "issue_tracker": {
      "type": "object",
      "description": "Configure which issue tracking system to use (GitHub Issues or Linear)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["github", "linear"],
          "default": "github",
          "description": "Issue tracker type: 'github' for GitHub Issues, 'linear' for Linear"
        },
        "linear": {
          "type": "object",
          "description": "Linear-specific configuration (required when type is 'linear')",
          "properties": {
            "team_key": {
              "type": "string",
              "description": "Linear team key (e.g., 'MUS', 'ENG')",
              "pattern": "^[A-Z]{2,10}$"
            },
            "api_key": {
              "type": "string",
              "description": "Linear API key (or set LINEAR_API_KEY env var)",
              "pattern": "^lin_api_.*$"
            },
            "backlog_state": {
              "type": "string",
              "default": "Backlog",
              "description": "Name of the workflow state for backlog issues"
            }
          },
          "required": ["team_key"]
        }
      }
    }
  }
}
